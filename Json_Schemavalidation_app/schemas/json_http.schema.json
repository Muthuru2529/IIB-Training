{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Customer",
  "type": "object",
  "properties": {
    "customer": {
      "type": "object",
      "properties": {
        "details": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "name": {
              "type": "string"
            },
            "dept": {
              "type": "string"
            },
            "age": {
              "type": "integer"
            }
          },
          "required": ["id", "name", "dept", "age"]
        }
      },
      "required": ["details"]
    }
  },
  "required": ["customer"]
}
