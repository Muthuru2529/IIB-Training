{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Orders",
  "type": "object",
  "properties": {
    "orders": {
      "type": "object",
      "properties": {
        "order": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "orderId": { "type": "string" },
              "customer": { "type": "string" },
              "amount": { "type": "Integer" },
              "status": { "type": "string" }
            },
            "required": ["orderId", "customer", "amount", "status"]
          }
        }
      },
      "required": ["order"]
    }
  },
  "required": ["orders"]
}
